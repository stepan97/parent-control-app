<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/call_type_item_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        android:src="@drawable/icon_question_mark" />

    <TextView
        android:id="@+id/call_name_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/call_duration_item_tv"
        android:layout_toRightOf="@+id/call_type_item_iv"
        android:gravity="center"
        android:text="@string/no_name"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/call_number_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_name_item_tv"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/call_duration_item_tv"
        android:layout_toRightOf="@+id/call_type_item_iv"
        android:gravity="center"
        android:text="@string/no_number"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/call_duration_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="00 : 00"
        android:textColor="@color/new_green"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/call_type_item_iv"
        android:layout_marginTop="5dp"
        android:background="@color/new_dark_blue" />

</RelativeLayout>