<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/new_dark_blue"/>
            <corners android:radius="25dp"/>
            <stroke android:color="@color/new_darker_blue" android:width="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/new_light_blue"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
</selector>