<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sms_type_item_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="10dp"
        android:src="@drawable/icon_sent_sms" />

    <TextView
        android:id="@+id/sms_name_or_number_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/show_sms_btn"
        android:layout_toRightOf="@+id/sms_type_item_iv"
        android:gravity="center"
        android:text="Stepan"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/sms_date_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms_name_or_number_item_tv"
        android:layout_toLeftOf="@+id/show_sms_btn"
        android:layout_toRightOf="@+id/sms_type_item_iv"
        android:gravity="center"
        android:text="19-05-2018"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/sms_time_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms_date_item_tv"
        android:layout_toLeftOf="@+id/show_sms_btn"
        android:layout_toRightOf="@+id/sms_type_item_iv"
        android:gravity="center"
        android:text="22:30"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/show_sms_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:text="@string/show"
        android:textAllCaps="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/sms_time_item_tv"
        android:layout_marginTop="5dp"
        android:background="@color/grey_888" />
</RelativeLayout>